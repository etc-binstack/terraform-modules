{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "dynamodb:Query",
                "dynamodb:GetItem",
                "dynamodb:PutItem",
                "dynamodb:UpdateItem",
                "dynamodb:DeleteItem"
            ],
            "Resource": ${jsonencode(enable_multi_region ? [
                "arn:aws:dynamodb:${region}:${account_id}:table/${table_name}",
                "arn:aws:dynamodb:${secondary_region}:${account_id}:table/${table_name}"
            ] : [
                "arn:aws:dynamodb:${region}:${account_id}:table/${table_name}"
            ])}
        }
    ]
}